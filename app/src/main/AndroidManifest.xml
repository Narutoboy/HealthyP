<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthyx.healthyxpro">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.ClinicScreen"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.PatientActivity"
            android:label="@string/title_activity_patient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AddRecord"
            android:label="@string/title_activity_add_record"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Age"
            android:label="@string/title_activity_checkups" />
        <activity android:name=".activity.SubmitAct" />
        <activity
            android:name=".activity.BP"
            android:label="@string/title_activity_bp" />
        <activity
            android:name=".activity.BMI"
            android:label="@string/title_activity_bmi" />
        <activity
            android:name=".activity.Tempreture"
            android:label="@string/title_activity_tempreture" />
        <activity
            android:name=".activity.BloodGlucose"
            android:label="@string/title_activity_blood_glucose" />
        <activity
            android:name=".activity.PalseOxymeter"
            android:label="@string/title_activity_palse_oxymeter" />
        <activity
            android:name=".activity.SPO2"
            android:label="@string/title_activity_spo2"></activity>
    </application>

</manifest>